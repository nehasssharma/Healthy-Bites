<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search</title>
    <link rel="stylesheet" href="/front-end/Search.css">
</head>
<body>
    <div class="main">
        <div class="container">
            <input type="text" id="searchBox" placeholder="Search for a food item (e.g., pizza, apple, banana)...">
            <div class="fooddetails">
                <% foods.forEach(food => { %>
                    <div class="food" data-name="<%= food.name %>">
                        <div class="img">
                            <img src="<%= food.image %>" alt="<%= food.name %>">
                        </div>
                        <h3><%= food.name %></h3>
                        <div class="nutrition-data" style="display: none;">
                            <span class="calories"><%= food.calories %></span>
                            <span class="protein"><%= food.protein %></span>
                            <span class="sugar"><%= food.sugar %></span>
                        </div>
                    </div>   
                <% }); %>
            </div>
            <a href="health.html"><button id="containerBtn" title="Back">BACK</button></a>
        </div>
    </div>

    <div id="customAlert" class="alert-box">
        <div class="alert-content">
            <h2 id="foodName"></h2>
            <div class="nutrition"></div>
            <a id="moreInfoBtn" href="#"><button title="More">More Info</button></a>
            <button id="BackBtn" title="Back">Back</button>
        </div>
    </div>

    <script src="back-end/Search.js"></script>
</body>
</html>